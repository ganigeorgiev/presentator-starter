{
    "name": "presentator/starter",
    "description": "Skeleton Presentator v2 installation setup",
    "keywords": ["starter", "skeleton", "presentator", "presentator-starter", "design", "collaboration", "yii2"],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "type": "project",
    "authors": [
        {
            "name":  "Gani Georgiev",
            "email": "gani.georgiev@gmail.com"
        }
    ],
    "require": {
        "presentator/api": "dev-master",
        "presentator/spa": "dev-master"
    },
    "config": {
        "platform": {
            "php": "7.1.0"
        },
        "optimize-autoloader": true,
        "process-timeout":     1800,
        "fxp-asset": {
            "enabled": false
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url":  "https://asset-packagist.org"
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "presentator\\api\\base\\Starter::postRun"
        ],
        "post-update-cmd": [
            "presentator\\api\\base\\Starter::postRun"
        ]
    },
    "extra": {
        "starter": {
            "spaConfig": {
                "VUE_APP_API_URL": "/api",
                "VUE_APP_FIRESTORE_PROJECT_ID": ""
            }
        }
    }
}
